# editorconfig文件定义一致的code style规范
# 根据不同的开发IDE或编辑器统一代码风格
# 详情见 editorconfig.org
root = true

## 除了jade文件以外，全部以4个空格作为tab


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[**.jade]
indent_style = space
indent_size = 2

[**.coffee]
indent_style = space
indent_size = 2

[**.sass]
indent_style = space
indent_size = 2
